// -*- mode: js-json -*-

{
    "layer": "top",
    "position": "top",
    "height": 22,
    "output": ["*"],

    "modules-left": [
        "hyprland/workspaces"
    ],

    "modules-center": [
        "mpd"
    ],

    "modules-right": [
        "custom/mu",
        "cpu",
        "memory",
        "battery",
        "network#eth",
        "network#wlan",
        "clock#date",
        "clock#time",
        "pulseaudio",
        "pulseaudio/slider",
        "tray",
    ],

    "hyprland/workspaces": {
        "persistent-workspaces": false,
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "cursor": false,
        "format": "{icon}",
        "format-icons": {
            "1": "‚ûä",
            "2": "‚ûã",
            "3": "‚ûå",
            "4": "‚ûç",
            "5": "‚ûé",
            "6": "‚ûè",
            "7": "‚ûê",
            "8": "‚ûë",
            "9": "‚ûí",
            "10": "‚ûì",
            "scratchpad": "",
        }
    },

    "mpd": {
        "format": "<span color=\"#6699CC\">üéú</span> {artist} - {title}",
        "format-paused": "<span color=\"#6699CC\">‚è∏</span> {artist} - {title}",
        "format-stopped": "",
        "cursor": false,
    },

    "custom/mu": {
        "format": "<span color=\"#6699CC\">ÔÉ†</span> {}",
        "exec": "sh -lc \"echo $(mu find flag:unread -f i | wc -l)/$(mu find '' -f i | wc -l)\"",
        "interval": 300,
        "return-type": "text",
        "tooltip": false
    },

    "cpu": {
        "interval": 1,
        "format": "<span color=\"#6699CC\">Ôãõ</span> {icon0} {icon1} {icon2} {icon3} {icon4} {icon5} {icon6} {icon7}",
        "format-icons": [
            "<span color=\"#66AA66\">‚ñÅ</span>",
            "<span color=\"#66AA66\">‚ñÇ</span>",
            "<span color=\"#DBBA1A\">‚ñÉ</span>",
            "<span color=\"#DBBA1A\">‚ñÑ</span>",
            "<span color=\"#DBBA1A\">‚ñÖ</span>",
            "<span color=\"#DBBA1A\">‚ñÜ</span>",
            "<span color=\"#AB3737\">‚ñá</span>",
            "<span color=\"#AB3737\">‚ñà</span>"
        ],
        "states": {
            "idle": 0,
            "normal": 0,
            "warning": 50,
            "critical": 80
        }
    },

    "memory": {
        "interval": 10,
        "format": "<span color=\"#6699CC\">ÔáÄ</span> {used:0.2f}G/{total:0.2f}G",
        "tooltip-format": "RAM: {used:0.2f} GiB / {total:0.2f} GiB"
    },

    "battery": {
        "interval": 10,
        "states": {
            "full": 99,
            "warning": 50,
            "critical": 10
        },
        "full-at": 100,
        "format": "{icon} {capacity}%",
        "format-charging": "{icon} {capacity}% ({time})",
        "format-discharging": "{icon} {capacity}%",
        "format-full": "<span color=\"#6699CC\">ÔâÄ</span> Full",
        "format-time": "<span color=\"#66AA66\">{H}h{m}</span>",
        "format-icons": [
            "<span color=\"#AB3737\">ÔâÉ</span>",
            "<span color=\"#DBBA1A\">ÔâÇ</span>",
            "<span color=\"#6699CC\">ÔâÅ</span>",
            "<span color=\"#6699CC\">ÔâÄ</span>",
        ],
        "tooltip-format": "Battery: {capacity}%\n{time}"
    },

    "network#eth": {
        "interface": "enp0s25",
        "format-ethernet": "ÔÑâ {ipaddr}",
        "format-disconnected": "",
        "tooltip-format-ethernet": "Ethernet: {ifname}\nIP: {ipaddr}"
    },

    "network#wlan": {
        "interface": "wlan0",
        "format-wifi": "<span color=\"#6699CC\">Ôá´</span> {essid}",
        "format-disconnected": "",
        "tooltip-format-wifi": "Wi-Fi: {ifname}\nSSID: {essid}\nSignal: {signalStrength}%"
    },

    "clock#date": {
        "interval": 60,
        "format": "<span color=\"#6699CC\">ÔÅ≥</span> {:%a %e %b}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode"          : "year",
            "weeks-pos"     : "right",
            "mode-mon-col"  : 3,
            "on-scroll"     : 1,
            "format": {
                "months":     "<span color='#BB77BB'><b>{}</b></span>",
                "days":       "<span color='#BBBBBB'><b>{}</b></span>",
                "weeks":      "<span color='#66BB66'><b>W{}</b></span>",
                "weekdays":   "<span color='#DE935F'><b>{}</b></span>",
                "today":      "<span color='#AB3737'><b><u>{}</u></b></span>"
            }
        },
    },

    "clock#time": {
        "interval": 5,
        "format": "<span color=\"#6699CC\">ÔÄó</span> {:%H:%M:%S}",
    },

    "pulseaudio": {
        "justify": "left",
        "format": "<span color=\"#6699CC\">ÔÄ®</span>",
        "format-headphone": "<span color=\"#6699CC\">ÔÄ•</span>",
        "format-bluetooth": "<span color=\"#6699CC\">ÔÄ•</span>",
        "format-muted": "<span color=\"#AB3737\">ÔÄ®</span>",
        "format-bluetooth-muted": "<span color=\"#AB3737\">ÔÄ•</span>",
        "tooltip": false,
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "cursor": false,
    },

    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
    },

    "tray": {
        "spacing": 7
    }
}
