" -*- mode: dactyl -*-

set ignorecase
set smartcase
set smartindent
set nohlsearch
set smartcase
set number
set cursorline
set autochdir
set wrapscan
set scrolloff=5
set clipboard=unnamedplus

set contentassistmode
set globalregisters
set atomicinsert
set noregexsearch
set exitlinkmode

nnoremap ,<C-j> J
nnoremap <C-r> ?
nnoremap U <C-r>
nnoremap H :noh<CR>
nnoremap <Tab> ==

noremap J 5j
noremap K 5k
noremap <C-a> ^
noremap <C-e> $

inoremap jk <Esc>

vnoremap <Tab> :fm<CR>

map b <Plug>(subword-back)
map e <Plug>(subword-end)
map w <Plug>(subword-word)

vnoremap s S
vnoremap S s
