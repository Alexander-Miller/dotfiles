""""""""""""""""
""" Settings """
""""""""""""""""

" more convenient hint chars "
set hintchars=asdfqwejkln

" use emacs as external browser "
set editor="emacsclient"

" show tabs' numbers "
set tabnumbers=true


""""""""""""""""""""
""" Key Bindings """
""""""""""""""""""""

" faster scrolling "
nnoremap j 4j
nnoremap k 4k

" hinting "
nmap d ;b
nmap D ;o
nmap <C-d> ;F

" h and l for tab navigation, ., for left and right "
nnoremap h :tabprevious<CR>
nnoremap l :tabnext<CR>
nnoremap , h<CR>
nnoremap . l<CR>

" q to close tabs "
nmap q :quit<CR>


""""""""""""""""""""""""
""" Firefox Settings """
""""""""""""""""""""""""

" don't hide menus in fullscreen "
set! browser.fullscreen.autohide=false
" to prevent q on the last tab from closing the window: "
set! browser.tabs.closeWindowWithLastTab=false


